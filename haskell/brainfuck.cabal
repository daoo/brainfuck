name: brainfuck
version: 1.0.0
synopsis: Brainfuck tools written in haskell
build-type: Simple
cabal-version: >=1.8
tested-with: GHC>=7.6

library
  hs-source-dirs: src
  build-depends: base
  ghc-options: -Wall -O2

test-suite signal-tests
  type: exitcode-stdio-1.0
  hs-source-dirs: tests, src
  main-is: MainTestSuite.hs
  build-depends: base, QuickCheck, test-framework, test-framework-quickcheck2
